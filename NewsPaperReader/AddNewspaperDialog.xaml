<Window x:Class="NewsPaperReader.AddNewspaperDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewsPaperReader"
        mc:Ignorable="d"
        Title="添加报纸" Height="500" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="添加新报纸" FontWeight="Bold" FontSize="16" Grid.Row="0" Margin="10"/>
        
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10">
            <TextBlock Text="报纸名称:" VerticalAlignment="Center" Width="80"/>
            <TextBox Text="{Binding NewspaperName}" Style="{StaticResource DefaultTextBox}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="10">
            <TextBlock Text="报纸URL:" VerticalAlignment="Center" Width="80"/>
            <TextBox Text="{Binding NewspaperUrl}" Style="{StaticResource DefaultTextBox}"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="10">
            <TextBlock Text="标题图片:" VerticalAlignment="Center" Width="80"/>
            <TextBox x:Name="TitleImagePathTextBox" Text="{Binding TitleImagePath}" Style="{StaticResource DefaultTextBox}"/>
            <Button Content="浏览..." Click="BrowseButton_Click" Margin="5,0,0,0" Width="60" Height="25"/>
        </StackPanel>
        
        <StackPanel Grid.Row="4" Margin="10">
            <TextBlock Text="处理方式:" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Vertical" Margin="20,0,0,0">
                <RadioButton x:Name="ParsePdfRadioButton" Content="尝试解析PDF" IsChecked="{Binding ParsePdf}" Margin="0,5,0,0" Checked="ParsePdfRadioButton_Checked" Unchecked="ParsePdfRadioButton_Unchecked"/>
                <RadioButton x:Name="ForceWebViewRadioButton" Content="直接查看网页版" IsChecked="{Binding ForceWebView}" Margin="0,5,0,0" Checked="ForceWebViewRadioButton_Checked" Unchecked="ForceWebViewRadioButton_Unchecked"/>
            </StackPanel>
        </StackPanel>
        
        <StackPanel Grid.Row="6" Margin="10">
            <TextBlock Text="说明:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Text="标题图片：报纸名称标题图片，可以自行截图保存，然后设置；" FontSize="12" Foreground="Gray"/>
            <TextBlock Text="解析PDF：尝试自动解析页面，获取版面目录与PDF版；" FontSize="12" Foreground="Gray"/>
            <TextBlock Text="直接查看网页版：对于已知的无法解析的页面，直接访问网页版。" FontSize="12" Foreground="Gray"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Grid.Row="7" HorizontalAlignment="Right" Margin="10">
            <Button Content="取消" Click="CancelButton_Click" Width="80" Height="30" Margin="0,0,10,0"/>
            <Button Content="确定" Click="OKButton_Click" Width="80" Height="30"/>
        </StackPanel>
    </Grid>
</Window>